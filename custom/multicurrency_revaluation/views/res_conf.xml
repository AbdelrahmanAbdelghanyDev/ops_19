<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_config_settings" model="ir.ui.view">
        <field name="name">account settings currency revaluation</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="after">
                <h2>Multicurrency revaluation</h2>
                <div class="row mt16 o_settings_container" id="multicurrency_revaluation_settings">
                    <div class="col-xs-24 col-md-12 o_setting_box">
                        <div class="content-group">
                            <table>
                                <tr class="row">
                                    <th class="col-xs-6 col-md-3"></th>
                                    <th class="col-xs-6 col-md-3"><p>Loss</p></th>
                                    <th class="col-xs-6 col-md-3"><p>Gain</p></th>
                                    <th class="col-xs-6 col-md-3"><p>Analytical Account</p></th>
                                </tr>
                                <tr class="row">
                                    <th class="col-xs-6 col-md-3"><p>Revaluation accounts</p><span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/></th>
                                    <td class="col-xs-6 col-md-3"><field name="revaluation_loss_account_id" nolabel="1"/> </td>
                                    <td class="col-xs-6 col-md-3"><field name="revaluation_gain_account_id" nolabel="1"/> </td>
                                    <td class="col-xs-6 col-md-3"><field name="revaluation_analytic_account_id" nolabel="1"/> </td>
                                </tr>
                                <tr class="row">
                                    <th class="col-xs-6 col-md-3"></th>
                                    <th class="col-xs-6 col-md-3"><p>Exchange diff journal</p></th>
                                    <th class="col-xs-6 col-md-3"><p>Entry Description</p></th>
                                </tr>
                                <tr class="row">
                                    <th class="col-xs-6 col-md-3"></th>
                                    <td class="col-xs-6 col-md-3"><field name="revaluation_exchange_diff_journal" nolabel="1"/> </td>
                                    <td class="col-xs-6 col-md-3"><field name="revaluation_entry_description" nolabel="1"/> </td>
                                </tr>

                            </table>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
