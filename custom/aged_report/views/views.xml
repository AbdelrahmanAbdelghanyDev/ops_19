<odoo>
    <data>
        <record id="aged_report_sale_order_line" model="ir.ui.view">
            <field name="name">Aged Report</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page/field/list/field[@name='price_total']" position="after">
                    <field name="is_revenue_button_clicked" invisible="1"/>
                    <field name="task_status" invisible="1"/>
                </xpath>
            </field>
        </record>
        <record id="aged_report_invoice_order_line" model="ir.ui.view">
            <field name="name">Aged Report</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[hasclass('d-flex')]" position="after">
                    <label for="invoice_open_days"
                           string="Days of invoice in Open state"
                           invisible="move_type not in ('out_invoice', 'out_refund', 'out_receipt')"/>
                    <div class="d-flex">
                        <field name="invoice_open_days"
                               invisible="move_type not in ('out_invoice', 'out_refund', 'out_receipt')"/>
                    </div>
                </xpath>
                <xpath expr="//page/field/list/field[@name='price_subtotal']" position="after">
                    <field name="is_revenue_button_clicked"
                           column_invisible="parent.move_type not in ('out_invoice', 'out_refund', 'out_receipt')"/>
                    <field name="task_status"
                           column_invisible="parent.move_type not in ('out_invoice', 'out_refund', 'out_receipt')"/>
                </xpath>
            </field>
        </record>
        <!--revenue accounts views-->
        <record model="ir.ui.view" id="revenue_accounts_form_view">
            <field name="name">revenue.accounts.form</field>
            <field name="model">revenue_accounts</field>
            <field name="arch" type="xml">
                <form string="Revenue Accounts">
                    <sheet>
                        <group class="">
                            <field name="revenue_acc_id" style="width: 300px"/>
                            <field name="accrued_acc_id" style="width: 300px"/>
                            <field name="tag" style="width: 300px"/>
                            <field name="company_id" style="width: 300px"/>
                            <field name="description" style="width: 400px"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="revenue_accounts_tree_view">
            <field name="name">revenue.accounts.tree</field>
            <field name="model">revenue_accounts</field>
            <field name="arch" type="xml">
                <list string="Revenue Accounts list">
                    <field name="revenue_acc_id"/>
                    <field name="accrued_acc_id"/>
                    <field name="tag"/>
                    <field name="company_id"/>
                    <field name="description"/>
                </list>
            </field>
        </record>
        <record model="ir.actions.act_window" id="revenue_accounts_action">
            <field name="name">Revenue Accounts</field>
            <field name="res_model">revenue_accounts</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create project Revenue accounts</p>
            </field>
        </record>
        <record model="ir.actions.act_window" id="cost_accounts_action">
            <field name="name">Cost / WIP Accounts</field>
            <field name="res_model">cost.accounts</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create project Cost / WIP accounts</p>
            </field>
        </record>

        <!--cost accounts views-->
        <record model="ir.ui.view" id="cost_accounts_form_view">
            <field name="name">cost.accounts.form</field>
            <field name="model">cost.accounts</field>
            <field name="arch" type="xml">
                <form string="Project Closure Accounts">
                    <sheet>
                        <group class="">
                            <!--<field name="type" widget="radio"/>-->
                            <field name="original_acc_id" style="width: 300px"/>
                            <field name="corresponding_acc_id" style="width: 300px"/>
                            <field name="description" style="width: 400px"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="cost_accounts_tree_view">
            <field name="name">cost.accounts.tree</field>
            <field name="model">cost.accounts</field>
            <field name="arch" type="xml">
                <list string="Cost / WIP Accounts list">
                    <!--<field name="type"/>-->
                    <field name="original_acc_id"/>
                    <field name="corresponding_acc_id"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <record model="ir.actions.act_window" id="cost_accounts_action">
            <field name="name">Cost / WIP Accounts</field>
            <field name="res_model">cost.accounts</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create project Cost / WIP accounts</p>
            </field>
        </record>
        <!--menu items-->
        <menuitem id="project_cost_menu" name="Project Cost" parent="account.menu_finance_configuration" sequence="5"/>
        <menuitem id="project_revenue_menu" name="Project Revenue" parent="account.menu_finance_configuration"
                  sequence="5"/>
        <menuitem id="project_cost_accounts_menu" name="Cost / WIP Accounts" parent="project_cost_menu"
                  action="cost_accounts_action" groups="aged_report.group_project_task_cost"/>
        <menuitem id="project_revenue_accounts_menu" name="Revenue Accounts" parent="project_revenue_menu"
                  action="revenue_accounts_action" groups="aged_report.group_project_task_revenue"/>

    </data>
</odoo>