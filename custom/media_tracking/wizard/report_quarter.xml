<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_quarter_wizard" model="ir.ui.view">
        <field name="name">TV rating by the program (15 mins) Wizard</field>
        <field name="model">a.wizard.quarter</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Tv rating by Program">
                <group>
                    <field name="date_format"/>
                </group>
                <group>
                    <group>
                        <field name="date_from" invisible="[('date_format','!=','from_to')]"
                         required ="[('date_format','=','from_to')]"/>
                        <field name="age" widget="many2many_tags" required="True"
                               options="{'no_open': True,'no_create':True, 'no_quick_create': True, 'no_create_edit':True}"/>
                        <field name="gender" widget="many2many_tags" required="True"
                               options="{'no_open': True,'no_create':True, 'no_quick_create': True, 'no_create_edit':True}"/>
                    </group>
                    <group>
                        <field name="date_to" invisible="[('date_format','!=','from_to')]"
                         required="[('date_format','=','from_to')]"/>
                        <field name="sec" widget="many2many_tags" required="True"
                               options="{'no_open': True,'no_create':True, 'no_quick_create': True, 'no_create_edit':True}"/>
                        <field name="region" widget="many2many_tags" required="True"
                               options="{'no_open': True,'no_create':True, 'no_quick_create': True, 'no_create_edit':True}"/>

                    </group>
                </group>
                <group invisible="[('date_format', '!=', 'days')]"
                 required="[('date_format', '=', 'days')]">
                    <field name="dates_ids">
                        <list editable="bottom">
                            <field name="date"/>
                        </list>
                    </field>
                </group>
                <group invisible="[('date_format', '!=', 'months')]"
                 required="[('date_format', '=', 'months')]" >
                    <field name="month_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="generate_quarter_report" type="object" string="Generate" class="oe_highlight"/>
                    <button name="generate_quarter_report" type="object" string="Generate Filtered Report"
                            class="oe_highlight" context="{'filtered': True}"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_quarter_wizard_total_sample" model="ir.ui.view">
        <field name="name">TV rating by the program (15 mins) Wizard (total sample)</field>
        <field name="model">a.wizard.quarter.total.sample</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Tv rating by Program (total sample)">
                <group>
                    <field name="date_format"/>
                </group>
                <group>
                    <group>
                        <field name="date_from" invisible="[('date_format','!=','from_to')]"
                         required="[('date_format','=','from_to')]"/>
                        <field name="age" widget="many2many_tags" required="True"
                               options="{'no_open': True,'no_create':True, 'no_quick_create': True, 'no_create_edit':True}"/>
                        <field name="gender" widget="many2many_tags" required="True"
                               options="{'no_open': True,'no_create':True, 'no_quick_create': True, 'no_create_edit':True}"/>
                    </group>
                    <group>
                        <field name="date_to" invisible="[('date_format','!=','from_to')]"
                         required="[('date_format','=','from_to')]"/>
                        <field name="sec" widget="many2many_tags" required="True"
                               options="{'no_open': True,'no_create':True, 'no_quick_create': True, 'no_create_edit':True}"/>
                        <field name="region" widget="many2many_tags" required="True"
                               options="{'no_open': True,'no_create':True, 'no_quick_create': True, 'no_create_edit':True}"/>

                    </group>
                </group>
                <group invisible="[('date_format', '!=', 'days')]"
                 required="[('date_format', '=', 'days')]">
                    <field name="dates_ids">
                        <list editable="bottom">
                            <field name="date"/>
                        </list>
                    </field>
                </group>
                <group invisible="[('date_format', '!=', 'months')]"
                 required="[('date_format', '=', 'months')]">
                    <field name="month_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="generate_quarter_report" type="object" string="Generate" class="oe_highlight"/>
                    <button name="generate_quarter_report" type="object" string="Generate Filtered Report"
                            class="oe_highlight" context="{'filtered': True}"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_quarter_wizard" model="ir.actions.act_window">
        <field name="name">Tv rating by Program</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">a.wizard.quarter</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_view_quarter_wizard_total_sample" model="ir.actions.act_window">
        <field name="name">Tv rating by Program (total sample)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">a.wizard.quarter.total.sample</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
            name="TV rating by the program Wizard - New Methodology"
            action="action_view_quarter_wizard"
            id="menu_view_rate_by_program"
            parent="media_tracking_reports_menu"/>

    <menuitem
            name="TV rating by the program Wizard - Old Methodology"
            action="action_view_quarter_wizard_total_sample"
            id="menu_view_rate_by_program_total_sample"
            parent="media_tracking_reports_menu"/>

</odoo>
