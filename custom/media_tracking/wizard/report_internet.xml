<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_internet_wizard" model="ir.ui.view">
        <field name="name">Internet Wizard</field>
        <field name="model">a.wizard.internet</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Tv rating by Program">
                <group>
                    <group>
                        <field name="date_from" required="1"/>
                    </group>
                    <group>
                        <field name="date_to" required="1"/>

                    </group>
                </group>
                <footer>
                    <button name="generate_internet_report" type="object" string="Generate" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_internet_wizard" model="ir.actions.act_window">
        <field name="name">Internet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">a.wizard.internet</field>
        <!--<field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
            name="Internet Wizard"
            action="action_view_internet_wizard"
            id="menu_view_internet_report"
            parent="media_tracking_reports_menu"/>

</odoo>
