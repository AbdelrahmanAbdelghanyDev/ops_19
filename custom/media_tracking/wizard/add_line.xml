<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_add_line_form">
        <field name="name">add.line.form</field>
        <field name="model">a.add.line</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="My Form">
                <sheet>
                    <group>
                        <field name="name" invisible="1"/>
                        <field name="questionnaire_date" invisible="1"/>
                        <field name="program_id" />
                        <field name="channel_id" readonly="[('program_id', '=', False)]" required="[('program_id', '!=', False)]"
                               domain="['&amp;',('channel_lines.program','=',program_id),'|','&amp;',
                               ('date_from', '&lt;=', questionnaire_date),('date_to', '&gt;=', questionnaire_date),'&amp;',
                               ('date_from', '=', False),('date_to', '=', False)]"/>

                    </group>
                    <group>
                        <field name="channel_lines" nolabel="1" readonly="['|',('channel_id', '=', False),('program_id', '=', False)]">
                            <list editable="bottom" >
                                <field name="readonly_field" invisible="1" />
                                <field name="period" readonly="[('readonly_field', '=', True)]" required="1"/>
<!--                                <field name="header" attrs="{'readonly': [('readonly_field', '=', True)]}" required="1"/>-->
                                <field name="time_from" readonly="[('readonly_field', '=', True)]"  required="1"
                                       options="{'no_open': True,'no_create':True, 'no_quick_create': True, 'no_create_edit':True}"/>
                                <field name="time_to" readonly="[('readonly_field', '=', True)]" required="1"
                                       options="{'no_open': True,'no_create':True, 'no_quick_create': True, 'no_create_edit':True}"/>
                                <field name="checked"/>
                            </list>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="add_line" type="object" string="Save &amp; Close" class="oe_highlight"/>
                    or
                    <button name="add_new_line" type="object" string="Save &amp; New" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_add_line">
        <field name="name">Add Line</field>
        <field name="res_model">a.add.line</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>