<odoo>
    <data>
        <record model="ir.ui.view" id="quarter_region_list">
            <field name="name">TV rating by the program (15 mins) list</field>
            <field name="model">a.quarter</field>
            <field name="arch" type="xml">
                <list>
                    <field name="duration"/>
                    <field name="channel_id"/>
                    <field name="programs_id"/>
                    <field name="base"/>
                    <field name="week_day"/>
                    <field name="week_end"/>
                    <field name="base_cairo" optional="show"/>
                    <field name="week_end_cairo" optional="show"/>
                    <field name="week_day_cairo" optional="show"/>

                    <field name="base_alex" optional="hidden"/>
                    <field name="week_end_alex" optional="hidden"/>
                    <field name="week_day_alex" optional="hidden"/>

                    <field name="base_delta" optional="hidden"/>
                    <field name="week_end_delta" optional="hidden"/>
                    <field name="week_day_delta" optional="hidden"/>

                    <field name="base_ue" optional="hidden"/>
                    <field name="week_end_ue" optional="hidden"/>
                    <field name="week_day_ue" optional="hidden"/>

                    <field name="base_c_r" optional="hidden"/>
                    <field name="week_end_c_r" optional="hidden"/>
                    <field name="week_day_c_r" optional="hidden"/>
                </list>
            </field>
        </record>

        <record id="quarter_view_region_pivot" model="ir.ui.view">
            <field name="name">TV rating by the program (15 mins) Pivot</field>
            <field name="model">a.quarter</field>
            <field name="arch" type="xml">
                <pivot string="TV rating by the program (15 mins)">
                    <field name="channel_id" type="row"/>
                    <field name="programs_id" type="row"/>
                    <field name="base" type="measure"/>
                    <field name="week_end" type="measure"/>
                    <field name="week_day" type="measure"/>
                    <field name="base_cairo" type="measure"/>
                    <field name="week_end_cairo" type="measure"/>
                    <field name="week_day_cairo" type="measure"/>
                </pivot>
            </field>
        </record>
    </data>
</odoo>