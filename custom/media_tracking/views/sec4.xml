<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="sec4_list">
            <field name="name">Sec4 list</field>
            <field name="model">a.sec4</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="score"/>
                </list>
            </field>
        </record>

        <!-- explicit form view definition -->
        <record model="ir.ui.view" id="sec4_form">
            <field name="name">Sec4 form</field>
            <field name="model">a.sec4</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="score"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="sec4_action_window">
            <field name="name">Sec4 </field>
            <field name="res_model">a.sec4</field>
            <field name="view_mode">list,form</field>
        </record>


        <!-- Menu -->

        <menuitem name="Sec4" id="sec4_menu_1_list" parent="media_tracking_conf_menu"
                  action="sec4_action_window" sequence="6"/>

    </data>
</odoo>