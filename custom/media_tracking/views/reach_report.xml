<odoo>
    <data>
        <record id="reach_report_form" model="ir.ui.view">
            <field name="name">reach.report.form</field>
            <field name="model">reach.report</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="compute_line_avg_rating" string="Compute AVG" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                                <field name="age_ids" widget="many2many_tags"/>
                                <field name="gender_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                                <field name="sec_ids" widget="many2many_tags"/>
                                <field name="region_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <group>
                            <field name="reach_percentage"/>
                        </group>
                        <field name="report_line_ids">
                            <list editable="bottom">
                                <field name="channel_id" required="True"/>
                                <field name="program_id" required="True"/>
                                <field name="time_from_id" required="True"/>
                                <field name="time_to_id" required="True"/>
                                <field name="brand"/>
                                <field name="frequency"/>
                                <field name="avg_rating"/>
                                <field name="grp"/>
                                <field name="sample"/>
                                <field name="total_sample"/>
                                <field name="reach"/>
                            </list>
                        </field>


                    </sheet>
                </form>
            </field>
        </record>
        <record id="reach_report_action" model="ir.actions.act_window">
            <field name="name">Reach Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reach.report</field>
            <field name="view_mode">list,form</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="reach_report_menu" name="Reach Report - New Methodology" parent="media_tracking.media_tracking_reports_menu"
                  action="reach_report_action" sequence="6"/>

        <record id="total_sample_reach_report_form" model="ir.ui.view">
            <field name="name">total.sample.reach.report.form</field>
            <field name="model">total.sample.reach.report</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="compute_line_avg_rating" string="Compute AVG" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                                <field name="age_ids" widget="many2many_tags"/>
                                <field name="gender_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                                <field name="sec_ids" widget="many2many_tags"/>
                                <field name="region_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <group>
                            <field name="reach_percentage"/>
                        </group>
                        <field name="report_line_ids">
                            <list editable="bottom">
                                <field name="channel_id" required="True"/>
                                <field name="program_id" required="True"/>
                                <field name="time_from_id" required="True"/>
                                <field name="time_to_id" required="True"/>
                                <field name="brand"/>
                                <field name="frequency"/>
                                <field name="avg_rating"/>
                                <field name="grp"/>
                                <field name="sample"/>
                                <field name="total_sample"/>
                                <field name="reach"/>
                            </list>
                        </field>


                    </sheet>
                </form>
            </field>
        </record>
        <record id="total_sample_reach_report_action" model="ir.actions.act_window">
            <field name="name">Total Sample Reach Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">total.sample.reach.report</field>
            <field name="view_mode">list,form</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="total_sample_reach_report_menu" name="Total Sample - Old Methodology"
                  parent="media_tracking.media_tracking_reports_menu"
                  action="total_sample_reach_report_action" sequence="6"/>
    </data>
</odoo>