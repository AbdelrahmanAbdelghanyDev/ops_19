<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="internet_n3_list">
            <field name="name">Internet N3 Report list</field>
            <field name="model">a.internet.n3</field>
            <field name="arch" type="xml">
                <list create="0" duplicate="0" delete="0">
                    <field name="n3"/>
                    <field name="base"/>
                    <field name="base_percent"/>

                    <field name="base_male" optional="hidden"/>
                    <field name="base_male_percent" optional="hidden"/>
                    <field name="base_female" optional="hidden"/>
                    <field name="base_female_percent" optional="hidden"/>

                    <field name="base_2" optional="hidden"/>
                    <field name="base_2_percent" optional="hidden"/>
                    <field name="base_3" optional="hidden"/>
                    <field name="base_3_percent" optional="hidden"/>
                    <field name="base_4" optional="hidden"/>
                    <field name="base_4_percent" optional="hidden"/>
                    <field name="base_5" optional="hidden"/>
                    <field name="base_5_percent" optional="hidden"/>
                    <field name="base_6" optional="hidden"/>
                    <field name="base_6_percent" optional="hidden"/>
                    <field name="base_7" optional="hidden"/>
                    <field name="base_7_percent" optional="hidden"/>
                    <field name="base_8" optional="hidden"/>
                    <field name="base_8_percent" optional="hidden"/>
                    <field name="base_9" optional="hidden"/>
                    <field name="base_9_percent" optional="hidden"/>
                    <field name="base_10" optional="hidden"/>
                    <field name="base_10_percent" optional="hidden"/>

                    <field name="base_cairo" optional="hidden"/>
                    <field name="base_cairo_percent" optional="hidden"/>
                    <field name="base_alex" optional="hidden"/>
                    <field name="base_alex_percent" optional="hidden"/>
                    <field name="base_delta" optional="hidden"/>
                    <field name="base_delta_percent" optional="hidden"/>
                    <field name="base_ue" optional="hidden"/>
                    <field name="base_ue_percent" optional="hidden"/>
                    <field name="base_c_r" optional="hidden"/>
                    <field name="base_c_r_percent" optional="hidden"/>

                    <field name="base_a" optional="hidden"/>
                    <field name="base_a_percent" optional="hidden"/>
                    <field name="base_b" optional="hidden"/>
                    <field name="base_b_percent" optional="hidden"/>
                    <field name="base_c1" optional="hidden"/>
                    <field name="base_c1_percent" optional="hidden"/>
                    <field name="base_c2" optional="hidden"/>
                    <field name="base_c2_percent" optional="hidden"/>
                    <field name="base_de" optional="hidden"/>
                    <field name="base_de_percent" optional="hidden"/>

                </list>
            </field>
        </record>

        <record id="internet_n3_view_pivot" model="ir.ui.view">
            <field name="name">Internet N3 Pivot</field>
            <field name="model">a.internet.n3</field>
            <field name="arch" type="xml">
                <pivot string="Internet N3">
                    <field name="n3" type="row"/>
                    <field name="base" type="measure"/>
                    <field name="base_percent" type="measure"/>
                    <field name="base_male" type="measure"/>
                    <field name="base_male_percent" type="measure"/>
                    <field name="base_female" type="measure"/>
                    <field name="base_female_percent" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="internet_n3_action_window">
            <field name="name">Internet N3</field>
            <field name="res_model">a.internet.n3</field>
            <field name="view_mode">list,pivot</field>
        </record>


        <!-- Menu -->

        <menuitem name="N3 Internet Report" id="internet_n3_menu_1_list" parent="media_tracking_reports_menu"
                  action="internet_n3_action_window" sequence="5"/>

    </data>
</odoo>