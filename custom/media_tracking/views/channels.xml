<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="channels_list">
            <field name="name">Channels list</field>
            <field name="model">a.channels</field>
            <field name="arch" type="xml">
                <list>
                    <field name="channel_id"/>
<!--                    <field name="name"/>-->
<!--                    <field name="channel_name"/>-->
                    <field name="date_from"/>
                    <field name="date_to"/>
                </list>
            </field>
        </record>

        <!-- explicit form view definition -->
        <record model="ir.ui.view" id="channels_form">
            <field name="name">Channels form</field>
            <field name="model">a.channels</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="channel_id"/>
                            <h1>
<!--                                <field name="name"/>-->
                                <field name="channel_id" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
<!--                                <field name="channel_name"/>-->
                                <field name="date_from"/>
                                <field name="other"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                            </group>
                            <field name="channel_lines" nolabel="1">
                                <list editable="bottom" default_order="program desc">
                                    <field name="period" required="1"/>
                                    <field name="time_from" required="1"
                                           options="{'no_open': True,'no_create':True, 'no_quick_create': True, 'no_create_edit':True}"/>
                                    <field name="time_to" required="1"
                                           options="{'no_open': True,'no_create':True, 'no_quick_create': True, 'no_create_edit':True}"/>
                                    <field name="program" required="1"/>
                                </list>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="channels_action_window">
            <field name="name">Channels</field>
            <field name="res_model">a.channels</field>
            <field name="view_mode">list,form</field>
        </record>


        <!-- Menu -->

        <menuitem name="Channels" id="channels_menu_1_list" parent="media_tracking_conf_menu"
                  action="channels_action_window" sequence="2"/>

    </data>
</odoo>