<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="time_to_list">
            <field name="name">Time to list</field>
            <field name="model">a.time_to</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <!-- explicit form view definition -->
        <record model="ir.ui.view" id="time_to_form">
            <field name="name">Time to form</field>
            <field name="model">a.time_to</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name"/>
                            <h1><field name="name"/></h1>
                        </div>
                    </sheet>
                   <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="time_to_action_window">
            <field name="name">Time to </field>
            <field name="res_model">a.time_to</field>
            <field name="view_mode">list,form</field>
        </record>


        <!-- Menu -->

        <menuitem name="Time to" id="time_to_menu_1_list" parent="media_tracking_conf_menu"
                  action="time_to_action_window" sequence="8"/>

    </data>
</odoo>