<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="n2_list">
            <field name="name">N2 list</field>
            <field name="model">a.n2</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="other"/>
                    <field name="show_n3"/>
                    <field name="report_n3"/>
                </list>
            </field>
        </record>

        <!-- explicit form view definition -->
        <record model="ir.ui.view" id="n2_form">
            <field name="name">N2 form</field>
            <field name="model">a.n2</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="other"/>
                            </group>
                            <group>
                                <field name="show_n3"/>
                                <field name="report_n3"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="n2_action_window">
            <field name="name">N2 </field>
            <field name="res_model">a.n2</field>
            <field name="view_mode">list,form</field>
        </record>


        <!-- Menu -->

        <menuitem name="N2" id="n2_menu_1_list" parent="media_tracking_conf_menu"
                  action="n2_action_window" sequence="4"/>

    </data>
</odoo>