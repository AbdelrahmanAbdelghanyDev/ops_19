<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="s1_list">
            <field name="name">S1 list</field>
            <field name="model">a.s1</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="continue_questionnaire"/>
                </list>
            </field>
        </record>

        <!-- explicit form view definition -->
        <record model="ir.ui.view" id="s1_form">
            <field name="name">S1 form</field>
            <field name="model">a.s1</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <field name="continue_questionnaire"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="s1_action_window">
            <field name="name">S1 </field>
            <field name="res_model">a.s1</field>
            <field name="view_mode">list,form</field>
        </record>


        <!-- Menu -->

        <menuitem name="S1" id="s1_menu_1_list" parent="media_tracking_conf_menu"
                  action="s1_action_window" sequence="3"/>

    </data>
</odoo>