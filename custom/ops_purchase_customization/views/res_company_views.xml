<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the company form to add the ops_emirate field -->
    <record id="view_company_form_inherit_ops_purchase" model="ir.ui.view">
        <field name="name">res.company.form.inherit.ops.purchase</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='color']" position="after">
                    <field name="ops_emirate"/>
            </xpath>
        </field>
    </record>
</odoo>