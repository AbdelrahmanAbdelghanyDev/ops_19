<odoo>
    <data>
        <template id="report_accounting_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="oe_structure"/>
                            <h2 align="center">Cash Receipt</h2>
                            <p>Recepit Number:
                                <span t-field="o.name"/>
                            </p>
                            <!--<p>Customer Name:-->
                                <!--<span t-field="o.partner_id"/>-->
                            <!--</p>-->
                            <div style="width:100%;overflow:hidden;">
                                <div style="width:50%;float:left;">
                                    <!--<p>Journal:-->
                                    <!--<span t-field="o.journal_id"/>-->
                                    <!--</p>-->
                                    <p>Date:
                                        <span t-field="o.date"/>
                                    </p>
                                </div>
                                <div style="width:50%;float:left;">
                                    <!--<p>Starting Balance:-->
                                    <!--<span t-field="o.balance_start"/>-->
                                    <!--</p>-->
                                    <!--<p>Ending Balance:-->
                                    <!--<span t-field="o.balance_end_real"/>-->
                                    <!--</p>-->
                                </div>
                            </div>
                            <br/>
                            <table class="table table-bordered" border="1" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th class="text-right">Label</th>
                                        <th class="text-right">Partner</th>
                                        <th class="text-right">Reference</th>
                                        <th class="text-right">Amount</th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">
                                    <t t-foreach="o.line_ids" t-as="line">
                                        <tr>
                                            <td align="center">
                                                <div>
                                                    <span t-field="line.date"/>
                                                </div>
                                            </td>
                                            <td align="center">
                                                <div>
                                                    <span t-field="line.name"/>
                                                </div>
                                            </td>
                                            <td align="center">
                                                <div>
                                                    <span t-field="line.partner_id"/>
                                                </div>
                                            </td>
                                            <td align="center">
                                                <div>
                                                    <span t-field="line.ref"/>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="col-xs-1">
                                                    <span t-field="line.amount"/>
                                                </div>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <div style="float:left;margin-left:500px" class="text-right">
                                <strong>Computed Balance</strong>
                            </div>
                            <div class="text-right">
                                <span t-field="o.balance_end"
                                      t-options='{"widget": "monetary"}'/>
                            </div>
                            <br/><br/><br/><br/>
                            <div class="text-right">
                                <p style="font: 400 20px/1.3 'Oleo Script', Helvetica, sans-serif;">signature</p>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>


        <report
                id="custom_accounting_report"
                model="account.bank.statement"
                string="Transaction Report"
                report_type="qweb-pdf"
                name="custom_accounting.report_accounting_view"
                file="custom_accounting.report_opportunity"/>
    </data>
</odoo>