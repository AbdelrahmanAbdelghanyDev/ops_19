<odoo>
    <data>
        <record id="invoice_form_inherit" model="ir.ui.view">
            <field name="name">Invoice form inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@name='journal_div']" position="after">
                        <field name="tag_ids" widget="many2many_tags" invisible="[('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))]"/>
                        <field name="revenue_team_id" invisible="[('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))]"/>
                        <field name="executive_team_id" invisible="[('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))]"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>