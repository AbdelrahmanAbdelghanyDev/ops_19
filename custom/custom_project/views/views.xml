<odoo>
    <data>

        <!-- Project Form View -->
        <record id="custom_project_template_form_view" model="ir.ui.view">
            <field name="name">custom.project.template.form.view</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='label_tasks']" position="after">
                    <group>
                        <field name="mon"/>
<!--                        Not Available in Odoo 14-->
<!--                        <field name="start_date"/>-->
                        <field name="date"/>
                        <!-- <button name="print_report" string="Print" type="object" class="btn-primary"/> -->
                    </group>
                </xpath>
<!--                    Not Availalble in Odoo 14-->
<!--                <xpath expr="//page[@name='settings']/group/field[@name='partner_id']" position="attributes">-->
<!--                    <attribute name="invisible">1</attribute>-->
<!--                </xpath>-->

                <xpath expr="//field[@name='name']" position="after">
                    <field name="internl_pro_name" placeholder="Internal Project Name"/>
                </xpath>

                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

            </field>
        </record>


        <record id="custom_project_template_tree_view" model="ir.ui.view">
            <field name="name">custom.project.template.tree.view</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="internl_pro_name"/>
                </xpath>
            </field>
        </record>


        <!-- Task Form View -->
        <record id="custom_task_template_form_view" model="ir.ui.view">
            <field name="name">custom.task.template.form.view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">

                <xpath expr="//h1" position="before">

                    <field name="original_image" widget='image' class="oe_avatar"
                           options='{"preview_image":"medium_image"}'/>

                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="after">
                    <field name="date_start" string="FW Starting date"/>
                    <field name="date_end" string="FW Starting date"/>
                    <field name="traveling_time" string="Target(month of completion)" required="1"/>
                    <field name='team_id' invisible="True"/>
                    <field name='executive_person'/>
                    <field name="user_check" invisible="1"/>
                    <field name='Revenue_bu' readonly="[('user_check', '=', False)]"/>
                    <field name='Sales_bu' readonly="[('user_check', '=', False)]"/>
                </xpath>
                <xpath expr="//field[@name='date_end']" position="replace"></xpath>
                <field name="date_deadline" position="after">
                    <field name="date_end1" string="FW Ending date"/>
                </field>
                <xpath expr="//field[@name='date_deadline']" position="attributes">
                    <attribute name="string">Rev Date</attribute>
                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="view_task_form2_inheritted">
            <field name="name">project.task.form.inheritted</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
<!--                <xpath expr="//field[@name='planned_hours']" position="replace">-->
<!--                    <field name="planned_hours" widget="float_time" string="Sample Size" groups="hr_timesheet.group_hr_timesheet_user"/>-->
<!--                </xpath>-->

                <xpath expr="//field[@name='unit_amount']" position="replace">
                    <field name="unit_amount" string="Sample Size" widget="float_time" groups="hr_timesheet.group_hr_timesheet_user"/>
                </xpath>
<!--                <xpath expr="//button[@name='toggle_active']" position="attributes">-->
<!--                    <attribute name="groups">custom_project.group_finance_team</attribute>-->
<!--                </xpath>-->
            </field>
        </record>

        <!--  Task Tree view Inherited -->
        <record id="custom_task_template_tree_view" model="ir.ui.view">
            <field name="name">custom.task.template.tree.view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='project_id']" position="after">
                    <field name="team_id"/>
                    <field name="date_end"/>
                    <field name="description"/>
                </xpath>
            </field>
        </record>

        <!--Inherit quotations search view-->
        <record id="view_project_taskr_inherit_search" model="ir.ui.view">
            <field name="name">project.task.search.expand.filter</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <!-- This field will show up on the default filters
                         &lt; is the XML encoding for < and &gt; is the XML encoding for > -->
                    <filter string="Today" name="today" domain="[('today_flag', '=', True)]"/>

                </xpath>
            </field>
        </record>


        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="custom_project_list_view">
            <field name="name">custom.project.list.view</field>
            <field name="model">project.task.teams</field>
            <field name="arch" type="xml">
                <list string='List Details'>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record id="custom_project_template_action" model="ir.actions.act_window">
            <field name="name">Teams</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.task.teams</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new Team.
                </p>
            </field>
        </record>

        <!-- explicit Form view definition -->

        <record id='custom_project_details_form_view' model="ir.ui.view">
            <field name="model">project.task.teams</field>
            <field name="arch" type="xml">
                <form string='Form Details'>

                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="member_ids"/>
                        </group>

                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- explicit Form view definition -->

        <record id='members_details_form_view' model="ir.ui.view">
            <field name="model">team.members</field>
            <field name="arch" type="xml">
                <form string='Form Details'>

                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem name="Teams" id="custom_project.menu_1" parent="project.menu_main_pm"
                  groups="project.group_project_manager"/>


        <!-- actions -->

        <menuitem name="Teams" id="custom_project.menu_1_list" parent="custom_project.menu_1"
                  action="custom_project_template_action" groups="project.group_project_manager"/>


    </data>
</odoo>